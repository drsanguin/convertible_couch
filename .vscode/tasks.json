{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Cargo Watch Test Verbose",
			"type": "shell",
			"command": "cargo",
			"args": [
				"watch",
                "-x",
                "test --verbose -- --nocapture"
			],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated"
            },
			"group": "test",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}