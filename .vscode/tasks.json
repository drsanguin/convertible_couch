{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Cargo Watch Test Verbose",
			"type": "shell",
			"command": "cargo",
			"args": [
				"watch",
                "-x",
                "test --verbose -- --nocapture"
			],
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated"
            },
			"group": "test",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Install cargo-mutants",
			"type": "shell",
			"command": "cargo",
			"args": [
				"install",
				"--locked",
				"cargo-mutants"
			],
    	    "group": "build"
		},
		{
			"label": "Run cargo-mutants",
			"type": "shell",
			"command": "cargo",
			"args": [
				"mutants",
				"--all-features",
				"--no-shuffle",
				"--test-workspace=true",
				"--jobs=2"
			],
    	    "group": "build"
		},
    	{
    	    "label": "Mutation test (install + run)",
    	    "dependsOn": [
    	        "Install cargo-mutants",
    	        "Run cargo-mutants"
    	    ],
    	    "dependsOrder": "sequence",
    	    "group": "build"
    	}
	]
}